                android:radius="5dp" />
            <solid
                android:color="#20CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="2dp"
                android:left="1dp" />
            <corners
                android:radius="5dp" />
            <solid
                android:color="#30CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="2dp"
                android:left="1dp" />
            <corners
                android:radius="5dp" />
            <solid
                android:color="#50CCCCCC" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/red" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
